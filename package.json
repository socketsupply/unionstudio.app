{
  "name": "Scratches",
  "productName": "Scratches",
  "main": "index.js",
  "version": "0.0.7",
  "description": "Read, Evaluate, Print, Loop with a nicer editor",
  "repository": {
    "url": "git@github.com:0x00a/scratches.git",
    "type": "git"
  },
  "dependencies": {
    "codemirror": "^5.33.0",
    "marked": "^0.3.12",
    "typescript": "2.7.2"
  },
  "devDependencies": {
    "cross-spawn": "^5.1.0",
    "electron": "^1.8.2",
    "electron-builder": "^20.2.0",
    "electron-icon-maker": "0.0.4",
    "electron-publisher-s3": "^20.2.0",
    "pre-commit": "^1.2.2",
    "standard": "^10.0.2"
  },
  "scripts": {
    "start": "electron .",
    "test": "npm run lint",
    "lint": "standard \"**/*.js\"",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "pack": "build",
    "dist": "build --publish=onTagOrDraft"
  },
  "pre-commit": [ "precommit-msg", "lint" ],
  "author": "Voltra Co. <hello@voltra.co>",
  "license": "MIT",
  "build": {
    "appId": "com.scratches",
    "asar": true,
    "npmRebuild": false,
    "files": [
      "**/*",
      "src",
      "!keys",
      "!test",
      "!*.pug",
      "!src/node_modules/test",
      "!release",
      "!.DS_Store",
      "!webpack.config.js",
      "!cmake-js",
      "!pkg",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,test,__tests__,tests,powered-test,example,examples,*.d.ts}",
      "!**/*.{o,hprof,orig,pyc,pyo,rbc}",
      "!**/node_modules/.bin",
      "!**/{.DS_Store,.git,.gitignore}"
    ],
    "linux": {
      "executableName": "scratches",
      "target": [
        "AppImage",
        "tar.gz",
        "deb",
        "rpm"
      ]
    },
    "mac": {
      "icon": "./static/icon.icns"
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
